;; other methods 

_ message::send(
    [builder] _cntx, 
    int _mode
) impure inline {
    [builder _raw_message] = _cntx;

    send_raw_message(_raw_message.end_cell(), _mode);

    return [_raw_message];
}

_ message::get_raw_message(
    [builder] _cntx
) impure inline {
    [builder _raw_message] = _cntx;

    return ([_raw_message], _raw_message.end_cell());
}
