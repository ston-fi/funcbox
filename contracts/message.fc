{-
    message.fc

    This library simplify the creation of outgoing messages from a contract.
-}

;; struct 
;; _raw_message:builder 

_ message::new() inline {
    return [begin_cell()];
}

;; constructor methods

_ message::set_header(
    [builder] _cntx, 
    int _mode,
    slice _to, 
    int _amount
) inline {
    [builder _raw_message] = _cntx;

    builder _raw_message = _raw_message
        .store_uint(_mode, 6)
        .store_slice(_to)
        .store_coins(_amount);

    return [_raw_message];
}

_ message::set_empty_body(
    [builder] _cntx
) inline {
    [builder _raw_message] = _cntx;

    builder _raw_message = _raw_message
        .store_uint(0, 107);

    return [_raw_message];
}

